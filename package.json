{
  "name": "tuyapi",
  "version": "3.2.3",
  "description": "An easy-to-use API for devices that use Tuya's cloud services",
  "main": "built/index.js",
  "files": [
    "built/**/*"
  ],
  "scripts": {
    "ava": "ava test/",
    "test": "xo src/* --quiet && npm run ava",
    "cover": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "document": "npx typedoc --out docs src/ --tsconfig tsconfig.json",
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "preversion": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codetheweb/tuyapi.git"
  },
  "keywords": [
    "tuya",
    "iot",
    "plug",
    "jinvoo",
    "switch",
    "api",
    "socket",
    "protocol"
  ],
  "author": "Max Isom <codetheweb@icloud.com> (https://maxisom.me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codetheweb/tuyapi/issues"
  },
  "homepage": "https://github.com/codetheweb/tuyapi#readme",
  "dependencies": {
    "@types/node-forge": "^0.7.11",
    "crc": "^3.5.0",
    "debug": "^4.0.0",
    "node-forge": "^0.8.0",
    "p-timeout": "^2.0.1",
    "retry": "^0.10.1"
  },
  "devDependencies": {
    "ava": "1.2.1",
    "coveralls": "3.0.2",
    "nyc": "13.2.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3",
    "xo": "0.24.0"
  },
  "xo": {
    "space": true,
    "ignores": [
      "docs"
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 90
        }
      ],
      "indent": [
        "error",
        2,
        {
          "ObjectExpression": "first",
          "ArrayExpression": "first"
        }
      ]
    }
  }
}
